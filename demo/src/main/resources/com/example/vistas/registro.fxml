<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="20" stylesheets="@../styles/styles.css" styleClass="main-color"
    xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.RegistroController">    
    <GridPane alignment="CENTER">
        <ImageView fx:id="imagenLogo" />
    </GridPane>
    
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="Nombre completo:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="white-label"/>
        <TextField fx:id="campoNombre" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="País:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="white-label"/>
        <TextField fx:id="campoPais" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="white-label"/>
        <TextField fx:id="campoEmailReg" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Nombre de usuario:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="white-label"/>
        <TextField fx:id="campoEmailReg" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="white-label"/>
        <TextField fx:id="campoContraseñaReg" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Button text="Atrás" onAction="#switchToLogin" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Button text="Continuar" onAction="#switchToMenuPrincipal" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>
</VBox>
